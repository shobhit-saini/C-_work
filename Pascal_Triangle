#include <iostream>

using namespace std;

int main()
{
    int row,i,j,a;
    cout<<"Enter the No. of rows:";
    cin>>row;
    for(i=0;i<row;i++)
    {
        a=1;
        for (int k = 1; k<(row-i); k++)
        {
            cout << "   ";
        }
        for(j=1;j<=i;j++)
        {
            cout<<"     "<<a;
            a=a*((i-j))/j;
        }
        cout<<endl<<endl;
    }
    return 0;
}
